{
  "manifest_version": 3,
  "name": "Prompt Optimizer",
  "version": "1.0",
  "description": "Optimize prompts on ChatGPT, Gemini, Claude using Gemini API.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Optimizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/google-genai.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
